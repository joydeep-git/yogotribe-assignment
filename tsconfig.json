{
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
